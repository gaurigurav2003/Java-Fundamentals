package Assignment;
import java.util.*;

public class SquareRoot {
	
		
		public static void main(String[] args) {
			Scanner sc=new Scanner(System.in);

			int N=sc.nextInt();
	         long ans=0;
			 int n=0;
			while(N!=0){

				int rem=N%2;
				N=N/2;

				ans=ans+rem*(long)Math.pow(10,n);
				n++;
			}
			System.out.println(ans);

		}
	}



